{{#if addNewAnswer}}
<h2>My Answer</h2>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Your Name</label>
        {{input class="form-control" value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="response">Your Answer</label>
        {{input class="form-control" value=response id="response"}}
      </div>
      <div class="form-group">
        <button class="btn btn-success" {{action 'saveAnswer'}}>Submit Answer</button>
      </div>
    </form>
  </div>
{{else}}
<div class="form-group">
  <button class="btn btn-success" {{action 'answerFormShow'}}>Offer Answer</button>
</div>
{{/if}}
